<UserControl x:Class="VPMobileRuntime100_1_0.View.MapView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VPMobileRuntime100_1_0.ViewModel"
             xmlns:esri="http://schemas.esri.com/arcgis/runtime/2013"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance local:MapViewModel}" d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <esri:MapView x:Name="mvwMap" LayerViewStateChanged="MapView_LayerViewStateChanged" DrawStatusChanged="MapView_DrawStatusChanged">
        </esri:MapView>
    </Grid>
</UserControl>
